<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Speech and Natural API demo</title>
    </head>
    <body>

        {{#if recognizedText}}
            <h1>Texto reconocido</h1>
            {{recognizedText}}
        {{/if}}
        {{#if analizedText}}
            <h1>Sentimiento detectado</h1>
            {{analizedText}}
        {{/if}}

        <form action="/recognize" method="POST" enctype="multipart/form-data">
            <input type="file" name="audio">
            <input type="submit" value="Enviar">
        </form>

        <form action="/sentiment-text" method="POST">
            <input type="text" name="text" value="{{recognizedText}}">
            <input type="submit" value="Enviar">
        </form>
    </body>
</html>